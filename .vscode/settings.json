{
  "files.autoSave": "onFocusChange",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "explorer.sortOrder": "type",
  "files.exclude": {
    "**/.gitignore": true,
    "**/.eslintrc.js": true,
    "**/.prettierrc.js": true,
    "**/jest.config.js": true,
    "**/tsconfig.json": true,
    "**/build": true,
    "**/node_modules": true,
  }
}
